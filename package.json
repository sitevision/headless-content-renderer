{
  "name": "@sitevision/headless-content-renderer",
  "version": "0.0.4",
  "author": "Sitevision AB",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "github",
    "url": "https://github.com/sitevision/headless-content-renderer.git"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./cjs/index.js"
    }
  },
  "scripts": {
    "build": "yarn clean && yarn build:esm && yarn build:cjs && cp package.json README.md ./dist",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc",
    "clean": "rimraf dist",
    "test": "cypress run --component",
    "test:watch": "cypress open --component"
  },
  "dependencies": {
    "@types/react": "^18.0.25",
    "react": "^18.2.0",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "react": "17 | 18"
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.7",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "cypress": "^11.1.0",
    "eslint": "^8.27.0",
    "eslint-plugin-react": "^7.31.10",
    "prettier": "^2.7.1",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.4.1",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.0",
    "webpack-node-externals": "^3.0.0"
  },
  "prettier": {
    "singleQuote": true
  }
}
